# Cache settings
cache = ~/.npm-cache

# Specify the registry
registry = https://registry.npmjs.org/

# Save exact package versions by default
save-exact = true

# Show progress during package installation
progress = true

# Set the log level
loglevel = warn

# Don't include package scripts during installation
ignore-scripts = false

# Set the default package scope (if applicable)
@your-scope:registry = https://registry.your-scope.com/

# Set custom HTTP headers for requests to the registry
# optional, but useful for authentication or custom headers
; //registry.npmjs.org/:_authToken=your_auth_token
; //registry.your-scope.com/:_authToken=your_auth_token
